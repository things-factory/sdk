{
  "name": "@things-factory-sdk/sdk",
  "version": "1.0.0",
  "description": "Javascript SDKs for ThingsFactory",
  "scripts": {
    "publish": "lerna publish",
    "build": "yarn tsc --build packages",
    "lint": "eslint '**/*.{ts,tsx}'",
    "lint:changelogs": "node scripts/lint-changelogs.js",
    "ci:lint-docs": "yarn generate docs && test -z \"$(git status --porcelain)\" || echo 'The root README has not been updated. Run `yarn generate docs` in the root of your quilt directory and try again.'",
    "_test": "NODE_ICU_DATA=node_modules/full-icu jest",
    "pretest": "yarn build",
    "test": "yarn _test --no-coverage",
    "test:ci": "yarn _test --maxWorkers=3 --coverage",
    "check": "lerna run check",
    "release": "yarn lint:changelogs && lerna publish",
    "release-beta": "lerna publish --dist-tag beta",
    "clean": "rimraf './packages/*/dist'",
    "generate": "plop",
    "generate:package": "plop package && yarn plop docs && prettier --write \"./packages/tsconfig.json\"",
    "tophat": "tophat"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/things-factory-sdk/sdk.git"
  },
  "author": "hatiolab.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/things-factory-sdk/sdk/issues"
  },
  "homepage": "https://github.com/things-factory-sdk/sdk#readme",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@apollo/react-common": "^3.1.3",
    "@apollo/react-hooks": "^4.0.0",
    "@babel/core": "^7.5.5",
    "@shopify/app-bridge": "^1.26.2",
    "@shopify/ast-utilities": "^0.1.0",
    "@shopify/eslint-plugin": "^37.0.1",
    "@shopify/graphql-testing": "^4.2.0",
    "@shopify/react-testing": "^2.1.3",
    "@shopify/tophat": "^0.0.5",
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/faker": "^4.1.5",
    "@types/jest": "^26.0.8",
    "@types/puppeteer": "^3.0.1",
    "@types/react": "16.9.43",
    "@types/react-dom": "16.9.8",
    "@types/react-helmet": "^6.0.0",
    "apollo-cache-inmemory": "^1.3.6",
    "apollo-client": "^2.3.8",
    "babel-jest": "^26.2.1",
    "babel-loader": "^8.0.6",
    "babel-preset-shopify": "^21.0.0",
    "codecov": "^3.0.2",
    "cross-fetch": "^3.0.4",
    "element-closest": "^3.0.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^7.5.0",
    "faker": "^4.1.0",
    "fs-extra": "^9.0.1",
    "full-icu": "^1.3.0",
    "get-port": "^5.0.0",
    "glob": "^7.1.6",
    "graphql": "^15.3.0",
    "graphql-tag": "^2.10.3",
    "intl-pluralrules": "^1.2.0",
    "jest": "^26.2.1",
    "jest-enzyme": "^7.1.2",
    "jest-transform-graphql": "^2.1.0",
    "lerna": "^3.22.1",
    "plop": "^2.6.0",
    "prettier": "~2.0.4",
    "puppeteer": "^5.2.1",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-helmet": "^6.1.0",
    "rimraf": "^3.0.2",
    "saddle-up": "^0.5.1",
    "ts-jest": "^26.1.4",
    "tslib": "^2.0.0",
    "typescript": "^3.7.5"
  },
  "dependencies": {},
  "resolutions": {
    "@types/react": "16.9.43",
    "@types/react-dom": "16.9.8"
  }
}
